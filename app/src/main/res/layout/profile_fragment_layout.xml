<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="20dp"
    >

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar_profile">
    </include>



    <LinearLayout
        android:layout_below="@+id/tool_bar"
        android:paddingTop="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/parent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_weight=".9"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <RelativeLayout
                android:gravity="bottom"
                android:layout_width="90dp"
                android:layout_height="fill_parent">
                <TextView
                    android:background="@drawable/signup_logo"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="90dp" />
            </RelativeLayout>





        </LinearLayout>


        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView

                    android:id="@+id/usernametext"
                    android:gravity="center_vertical"
                    android:textColor="#AAAAAA"
                    android:text="NAME"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight=".6"/>
                <EditText

                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:id="@+id/usernameedit"
                    android:singleLine="true"
                    android:text="Lijo Varghese"
                    android:textColor="#000000"
                    android:textCursorDrawable="@null"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>

                <RelativeLayout
                    android:background="#AAAAAA"
                    android:layout_below="@+id/nametextview"
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp">

                </RelativeLayout>




            </LinearLayout>




        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView

                     android:id="@+id/phonenumber_text"
                    android:gravity="center_vertical"
                    android:textColor="#aaaaaa"
                    android:text="PHONE NUMBER"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight=".6"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <EditText
                        android:id="@+id/phonenumber_edit"
                        android:background="@android:color/transparent"
                         android:inputType="number"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="8129410466"
                        android:textColor="#000000"
                        android:textCursorDrawable="@null"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        />

                </LinearLayout>


                <RelativeLayout
                    android:background="#aaaaaa"
                    android:layout_below="@+id/nametextview"
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp">

                </RelativeLayout>





            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView

                    android:id="@+id/address_text"
                    android:gravity="center_vertical"
                    android:textColor="#aaaaaa"
                    android:text="ADDRESS"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight=".6"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <EditText
                        android:id="@+id/address_edit"
                        android:background="@android:color/transparent"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="abc"
                        android:textColor="#000000"
                        android:textCursorDrawable="@null"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        />

                </LinearLayout>


                <RelativeLayout
                    android:background="#aaaaaa"
                    android:layout_below="@+id/nametextview"
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp">

                </RelativeLayout>





            </LinearLayout>



        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView

                     android:id="@+id/postal_text"
                    android:gravity="center_vertical"
                    android:textColor="#aaaaaa"
                    android:text="POSTAL CODE"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight=".6"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <EditText

                        android:background="@android:color/transparent"
                        android:id="@+id/postal_edit"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="695526"
                        android:textColor="#000000"
                        android:textCursorDrawable="@null"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        />

                </LinearLayout>


                <RelativeLayout
                    android:background="#aaaaaa"
                    android:layout_below="@+id/nametextview"
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp">

                </RelativeLayout>





            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView

                    android:id="@+id/city_text"
                    android:gravity="center_vertical"
                    android:textColor="#aaaaaa"
                    android:text="CITY"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight=".6"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <EditText

                        android:background="@android:color/transparent"
                         android:id="@+id/city_edit"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="Trivandrum"
                        android:textColor="#000000"
                        android:textCursorDrawable="@null"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        />

                </LinearLayout>


                <RelativeLayout
                    android:background="#aaaaaa"
                    android:layout_below="@+id/nametextview"
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp">

                </RelativeLayout>





            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>



</RelativeLayout>
